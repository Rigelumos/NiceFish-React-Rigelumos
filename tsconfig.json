{
  "compilerOptions": {
    "experimentalDecorators": true,
    "jsx": "react",
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "module": "esnext",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ]
}