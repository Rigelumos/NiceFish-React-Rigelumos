{
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "*": ["src/types/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"]
}
