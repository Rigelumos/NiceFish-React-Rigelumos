{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "dist/types",
    "lib": ["esnext", "dom"],
    "module": "esnext",
    "target": "es5",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"],
      "*": ["src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
